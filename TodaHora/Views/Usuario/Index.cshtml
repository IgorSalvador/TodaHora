@model IEnumerable<TodaHora.Models.Usuario>
@{
    ViewBag.Title = "Listagem de usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user_wrapper">

    <h1>Usuários</h1>

    <a href="@Url.Action()" class="btn btn-success btn_create_new_element">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
        </svg>

        Novo usuário
    </a>

    <div class="wrapper_user_filter">

        <form action="@Url.Action("Index", "Usuario")" method="post" class="filter_form_wrapper">

            <h3>Filtros:</h3>

            <div class="filter_inputs">
                <label>
                    <span>Nome:</span>
                    <input type="text" name="txtNome" value="@ViewBag.txtNome" required />
                </label>

                <label>
                    <span>Username:</span>
                    <input type="text" name="txtNomeUsuario" value="@ViewBag.txtNomeUsuario" required/>
                </label>

                <label>
                    <span>E-mail:</span>
                    <input type="email" name="txtEmail" value="@ViewBag.txtEmail" required />
                </label>

                <label>
                    <span>Telefone:</span>
                    <input type="tel" name="txtTelefone" value="@ViewBag.txtTelefone" required class="telefone"/>
                </label>
            </div>

            <div class="filter_buttons">
                <button class="btn btn-primary">Buscar</button>
                <a class="btn btn-dark">Limpar</a>
            </div>

        </form>

    </div>

    <div class="wrapper_user_list">

        <table style="border-spacing: 20px;">

            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                    <td>Username</td>
                    <td>E-mail</td>
                    <td>Telefone</td>
                    <td>Administrador</td>
                    <td>Ativo</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => user.Pessoa.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(m => user.Pessoa.Sobrenome)
                        </td>

                        <td>
                            @Html.DisplayFor(m => user.Username)
                        </td>

                        <td>
                            @Html.DisplayFor(m => user.Email)
                        </td>

                        <td class="telefone">
                            @Html.DisplayFor(m => user.Pessoa.Telefone)
                        </td>

                        <td>
                            @Html.CheckBoxFor(m => user.blnAdmin, new { disabled = "true" })
                        </td>

                        <td>
                            @Html.CheckBoxFor(m => user.blnAtivo, new { disabled = "true" })
                        </td>

                        <td>
                            <a href="@Url.Action()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-fill-gear" viewBox="0 0 16 16">
                                    <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Zm9.886-3.54c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.045c-.613-.18-.613-1.048 0-1.229l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382l.045-.148ZM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
                                </svg>
                            </a>
                        </td>

                        <td>
                            <a href="@Url.Action()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-vcard-fill" viewBox="0 0 16 16">
                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5ZM9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8Zm1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Zm-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96c.026-.163.04-.33.04-.5ZM7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

@section Scripts{
    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script>

        $(document).ready(function () {

            $(".telefone").mask("(00) 00000-0000");
        });
    </script>
}